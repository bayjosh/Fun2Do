<h1>My Groups</h1>

<br>

<form class="joinGroup-form" action="/users/joinGroup" method="POST">

    <div class="form-group">
        <label for="groupCode">Group Code:</label>
        <input type="text" id="groupCode" name="groupCode">
    </div>

    <button class="btn btn-success" type="submit">Join A Group!</button>
</form>
<br>

{{>groups/groups}}

<button type="button" class="btn btn-warning" data-toggle="modal" data-target="#createGroupModal" name="createGroup">Create a New Group!</button>

<br><br>

{{#each myGroups}}
<a href="/users/mygroups/{{this.group_id}}">
    <div class="card text-center">
        <div class="card-header">
            <h1>{{this.group_name}}</h1><p>Group Code: {{this.group_code}}</p>
        </div>
        <div class="card-body">
            <p class="card-text">{{this.group_description}}</p>
        </div>
    </div>
</a>

<br> {{/each}}


<div class="modal fade" id="createGroupModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Create a Group!</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form data-group_id={{this.group_id}}>
                    <div class="form-group new_group_name">
                        <label for="new_group_name">Group Name:</label>
                        <input type="text" class="form-control" id="new_group_name" name="new_group_name">
                    </div>
                    <div class="form-group new_group_description">
                        <label for="new_group_description">Short Group Description</label>
                        <textarea class="form-control" id="new_group_description" name="new_group_description" rows="3"></textarea>
                    </div>
                    <button type="submit" data-dismiss="modal" class="btn btn-primary createGroup" id="createGroup">Create This Group!</button>
            </div>
            
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </form>
            </div>
        </div>
    </div>
</div>